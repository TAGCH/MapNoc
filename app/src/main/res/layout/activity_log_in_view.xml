<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0pt"
    tools:context=".LogInViewActivity" >

    <TextView
        android:id="@+id/MapNoc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_chettan"
        android:text="MapNoc"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/signInBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:fontFamily="@font/baloo_chettan"
        android:text="SIGN IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/signUpPannel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="531dp">

        <LinearLayout
            android:id="@+id/signUpLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="150dp"
            android:paddingStart="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="200dp"
            android:paddingEnd="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/signUpLb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/baloo_chettan"
                android:text="SIGN UP"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="48sp" />

            <EditText
                android:id="@+id/usernameTxtSU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:alpha="0.7"
                android:ems="10"
                android:hint="Username"
                android:inputType="text" />

            <EditText
                android:id="@+id/pwdTxtSU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:alpha="0.7"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/pwdTxtSU2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:alpha="0.7"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LeadToSIlb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.8"
                    android:padding="2dp"
                    android:text="Already have an account?" />

                <TextView
                    android:id="@+id/LeadToSIbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.8"
                    android:clickable="true"
                    android:fontFamily="@font/baloo_chettan"
                    android:padding="2dp"
                    android:text="SIGN IN"
                    android:textColor="#3294A1" />
            </LinearLayout>

            <Button
                android:id="@+id/SendSignUpbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="20dp"
                android:text="SIGN UP" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/signInPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toStartOf="@+id/signUpPannel"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/signInLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="200dp"
            android:paddingStart="50dp"
            android:paddingLeft="50dp"
            android:paddingTop="200dp"
            android:paddingEnd="50dp"
            android:paddingRight="50dp">

            <TextView
                android:id="@+id/logInLb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/baloo_chettan"
                android:text="SIGN IN"
                android:textAlignment="center"
                android:textSize="48sp" />

            <EditText
                android:id="@+id/usernameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:alpha="0.7"
                android:ems="10"
                android:hint="Username"
                android:inputType="text"
                android:textAllCaps="false"
                android:textColor="#99393939"
                android:textColorLink="#A3A3A3" />

            <EditText
                android:id="@+id/pwdTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:alpha="0.7"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAllCaps="false"
                android:textColor="#99393939" />

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LeadToSUlb"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.8"
                    android:padding="2dp"
                    android:text="Donâ€™t have an account?" />

                <TextView
                    android:id="@+id/LeadToSUbtn"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.8"
                    android:clickable="true"
                    android:fontFamily="@font/baloo_chettan"
                    android:padding="2dp"
                    android:text="SIGN UP"
                    android:textAlignment="textEnd"
                    android:textColor="#3294A1"
                    android:typeface="normal" />

            </LinearLayout>

            <Button
                android:id="@+id/SendSignInbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="75dp"
                android:layout_marginBottom="20dp"
                android:text="SIGN IN" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>